<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5C8A4"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="#803219"
        android:textSize="60sp"
        android:textStyle="bold">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:hint="Name"
            android:inputType="text"
            android:textColor="#111D60"
            android:textColorHint="#453434"
            android:textSize="20sp">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:hint="Email"
            android:inputType="text"
            android:textColor="#111D60"
            android:textColorHint="#453434"
            android:textSize="20sp">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#60B5DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNoET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60B5DC"
            android:hint="Phone"
            android:inputType="text"
            android:textColor="#111D60"
            android:textColorHint="#453434"
            android:textSize="20sp">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#EAE4B0"
        android:text="Save"
        android:textColor="#212D71"
        android:textSize="30sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:strokeColor="#F85454"
        app:strokeWidth="1dp">

    </com.google.android.material.button.MaterialButton>


</LinearLayout>